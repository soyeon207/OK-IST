<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".order">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/top_radius"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/order_speak"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@drawable/speak"
            />


        <LinearLayout
          android:id="@+id/activity_order"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/order_back"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="&lt;"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_radius"
                />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="280dp"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/order_img"
                    android:layout_width="420dp"
                    android:layout_height="525dp"
                    android:src="@drawable/order_store" />


            </LinearLayout>

            <Button
                android:id="@+id/order_next"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="&gt;"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_radius"
                />

        </LinearLayout>
        <TextView
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/activity_order"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text=": 왼쪽 버튼을 눌러주세요"
            android:id="@+id/order_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/logo_bottom" />
    </RelativeLayout>
</LinearLayout>